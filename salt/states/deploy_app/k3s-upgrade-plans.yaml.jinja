apiVersion: upgrade.cattle.io/v1
kind: Plan
metadata:
  name: server-plan
  namespace: system-upgrade
spec:
  # Upgrade one server node at a time
  concurrency: 1
  # Cordon (drain) the node before upgrade
  cordon: true
  nodeSelector:
    matchExpressions:
      # Targets nodes with the control-plane label
      - key: node-role.kubernetes.io/control-plane
        operator: In
        values:
        - "true"
  serviceAccountName: system-upgrade
  upgrade:
    image: rancher/k3s-upgrade
{% if k3s_version is not none %}
  version: {{ k3s_version }}
{% else %}
    # Target the stable channel for continuous upgrades
    #channel: https://update.k3s.io/v1-release/channels/stable
{% endif %}
---
# Agent plan
apiVersion: upgrade.cattle.io/v1
kind: Plan
metadata:
  name: agent-plan
  namespace: system-upgrade
spec:
  concurrency: 1
  cordon: true
  nodeSelector:
    matchExpressions:
    - key: node-role.kubernetes.io/control-plane
      operator: DoesNotExist
  prepare:
    args:
    - prepare
    - server-plan
    image: rancher/k3s-upgrade
  serviceAccountName: system-upgrade
  upgrade:
    image: rancher/k3s-upgrade
{% if k3s_version is not none %}
  version: {{ k3s_version }}
{% else %}
    # Target the stable channel for continuous upgrades
    #channel: https://update.k3s.io/v1-release/channels/stable
{% endif %}